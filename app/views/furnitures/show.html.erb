<%# end %>
  <%#= @furniture.type_of_furniture %>
  <%#= @furniture.name %>
  <%#= @furniture.material %>
  <%#= @furniture.color %>
<div class="main-container">
  <div class="galery-container">
    <% @furniture.photos.each do |photo| %>
      <div style="<%= "background: url('#{url_for(photo)}') no-repeat 50% / cover;" %>">
        <div class="content">
          <h2><%= @furniture.name %></h2>
          <span><%= @furniture.type_of_furniture %></span>
        </div>
      </div>
    <% end %>
  </div>

  <div class="furniture-container">
    <div class="furniture-details">
      <div class="furniture-card">
        <ul>
          <li><i class="fa-solid fa-screwdriver-wrench"></i> Type de meuble : <%= @furniture.type_of_furniture %></li>
          <li>Matériau(x) : <%= @furniture.material %></li>
          <li><i class="fa-solid fa-palette"></i> Couleurs : <%= @furniture.color %> 
            <% if @furniture.paint_brand.present? %>
              de chez : <%= @furniture.paint_brand %></li>
            <% end %>
          <% if @furniture.teint.present? %>
            <li>Teinte du meuble : <%= @furniture.teint %></li>
          <% end %>
          <% if @furniture.varnish.present? %></li>
            <li><i class="fa-solid fa-paintbrush"></i> Vernis : <%= @furniture.varnish %></li>
          <% end %>
          <% if @furniture.created_at.present? %>
            <li> <i class="fa-regular fa-calendar"></i> Date de réalisation : <%= @furniture.created_at.strftime("%d-%m-%Y") %></li>
          <% else %>
            <li> <i class="fa-regular fa-calendar"></i> Date de réalisation : <%= Time.now.strftime("%d-%m-%Y") %></li>
          <% end %>

        </ul>
        <p class="card-footer">Created by <em>Atelier Plinguet</em></p>
      </div>
    </div>  
      <%# <div class="furniture-desc"> %>
