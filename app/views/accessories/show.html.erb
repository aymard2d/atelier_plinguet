<!-- app/views/accessories/show.html.erb -->  
<% content_for :meta_title, "#{@accessory.type_of} is on #{DEFAULT_META["meta_product_name"]}" %>  
<% content_for :meta_description, @accessory.description %>  
<%# content_for :meta_image, cl_image_path(@accessory.photo.path) %>

<%# @accessory.photos.each do |photo| %>
  <%#= cl_image_tag photo.key, height: 500, width: 1200, class: "object-fit-cover" %>
<%# end %>
  <%#= @accessory.type_of_accessory %>
  <%#= @accessory.name %>
  <%#= @accessory.material %>
  <%#= @accessory.color %>
<div class="main-container">
  <div class="galery-container">
    <% @accessory.photos.each do |photo| %>
      <div style="<%= "background: url('#{url_for(photo)}') no-repeat 50% / cover;" %>">
        <div class="content">
          <h2><%= @accessory.name %></h2>
          <span><%= @accessory.type_of %></span>
        </div>
      </div>
    <% end %>
  </div>

  <div class="furniture-container">
    <div class="furniture-details">
      <div class="furniture-card">
        <ul>
          <li>Type de meuble : <%= @accessory.type_of %></li>
          <li>Matériau(x) : <%= @accessory.material %></li>
          <% if @accessory.created_at.present? %>
            <li> Date de création : <%= @accessory.created_at.strftime("%d-%m-%Y") %></li>
          <% else %>
            <li> Date de création : <%= Time.now.strftime("%d-%m-%Y") %></li>
          <% end %>
        </ul>
        <p class="card-footer">Created by <em>Atelier Plinguet</em></p>
      </div>
    </div>  
      <%# <div class="accessory-desc"> %>
        <div class="nft">
          <div class='main'>
            <% if @accessory.photos.attached? %>
              <img src="<%= url_for(@accessory.photos.first) %>" alt="Description de l'image">
            <% else %>
              <!-- Gérer le cas où aucune image n'est attachée -->
              <p>Aucune image disponible</p>
            <% end %>

            <h2><%= @accessory.name %></h2>
            
            <p class='description'><%= @accessory.description %></p>
            <div class='tokenInfo'>
              <div class="price">
                <ins>◘</ins>
                <p>0.031 ETH</p>
              </div>
              <div class="duration">
                <ins>◷</ins>
                <p>11 days left</p>
              </div>
            </div>
            <hr />
            <div class='creator'>
              <div class='wrapper'>
                <%= image_tag "logo-plinguet-01.png" %>
              </div>
              <p><ins>Création de</ins> l'Atelier Plinguet</p>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>





